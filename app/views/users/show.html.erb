<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4" style="min-width: 100vw">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>
<h4 style="text-align: center;"><%= @user.username %>'s articles</h4>
<ul class="get-format margin-left-right-format">
  <li><%= link_to "PDF", api_v1_user_path(format: :pdf) %></li>
  <li><%= link_to "JSON", api_v1_user_path %></li>
  <li><%= link_to "XML", api_v1_user_path(format: :xml) %></li>
</ul>
<%= render 'shared/article', obj: @user_articles %>
<div align="center">
  <%= will_paginate @user_articles, renderer: RemoteLinkPagination::LinkRenderer if @truth_format != 'pdf' %>
</div>