<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <% if @article.user %>
    <ul class="listing">
      <div class="row" align="center">
        <div class="col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
          <li class="article-title"><%= link_to @article.user.username, user_path(@article.user) %></li>
          <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center"><strong>Description:</strong></h4>
  <%= simple_format(@article.description) %>
  <ul class="ul-my-button">
    <li><%= button_to "Edit", edit_article_path(@article), :method => :get, class: "btn-xs btn-primary" %></li>
    <li><%= button_to 'Back', articles_path, :method => :get, class: "btn-xs btn-success" %></li>
    <li><%= button_to 'Delete', article_path(@article), :method => :delete, class: "btn-xs btn-danger", onclick:"return ask(\"Are you sure you want to delete this article?\")" %></li>
    <li><%= button_to "Show PDF", api_v1_article_path(@article, format: :pdf), :method => :get, class: "btn-xs btn-info" %></li>
    <li><%= button_to "Show JSON", api_v1_article_path(@article), :method => :get, class: "btn-xs btn-info" %></li>
    <li><%= button_to "Show XML", api_v1_article_path(@article, format: :xml), :method => :get, class: "btn-xs btn-info" %></li>
  </ul>
</div>