<h1 align="center">Listing all articles</h1>
<ul class="get-format margin-left-right-format">
  <li><%= link_to "PDF", api_v1_articles_path(format: :pdf) %></li>
  <li><%= link_to "JSON", api_v1_articles_path %></li>
  <li><%= link_to "XML", api_v1_articles_path(format: :xml) %></li>
</ul>
<%= render 'shared/article', obj: @articles %>
<div align="center">
  <%= will_paginate @articles, renderer: RemoteLinkPagination::LinkRenderer if @truth_format != 'pdf' %>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>